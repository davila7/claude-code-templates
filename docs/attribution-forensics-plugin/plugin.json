{
  "name": "attribution-forensics",
  "displayName": "Attribution Forensics Toolkit",
  "version": "1.0.0",
  "description": "Detect derivative works and attribution gaps in software marketplaces with automated remediation",
  "author": {
    "name": "Attribution Forensics Working Group",
    "url": "https://github.com/attribution-forensics"
  },
  "license": "MIT",
  "keywords": [
    "attribution",
    "forensics",
    "license-compliance",
    "derivative-works",
    "marketplace",
    "automation"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/attribution-forensics/claude-plugin"
  },
  "engines": {
    "claude-code": ">=0.1.0"
  },
  "commands": [
    "./commands/scan-marketplace.md",
    "./commands/analyze-resource.md",
    "./commands/verify-attribution.md",
    "./commands/generate-attribution.md",
    "./commands/create-remediation-pr.md",
    "./commands/forensics-report.md"
  ],
  "agents": [
    "./agents/attribution-detective.md",
    "./agents/license-compliance-expert.md",
    "./agents/remediation-engineer.md"
  ],
  "mcpServers": [
    "./mcps/attribution-forensics.json"
  ],
  "settings": [
    "./settings/forensics-config.json"
  ],
  "hooks": [
    "./hooks/pre-publish-check.md"
  ],
  "scripts": {
    "fingerprint": "python scripts/content_fingerprinter.py",
    "similarity": "python scripts/similarity_analyzer.py",
    "evidence": "python scripts/evidence_collector.py",
    "remediate": "python scripts/auto_remediator.py"
  },
  "dependencies": {
    "ssdeep": "^3.4",
    "tree-sitter": "^0.20.0",
    "sentence-transformers": "^2.0.0",
    "gitpython": "^3.1.0",
    "requests": "^2.31.0"
  },
  "config": {
    "similarityThreshold": 0.7,
    "autoRemediationEnabled": true,
    "requireApprovalForPRs": true,
    "marketplaces": [
      "npm",
      "pypi",
      "vscode",
      "claude-code",
      "github-actions"
    ]
  }
}
