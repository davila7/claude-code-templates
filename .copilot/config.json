{
  "version": "1.0.0",
  "copilot": {
    "agents": {
      "enabled": true,
      "autoActivate": true,
      "directory": ".copilot/agents",
      "defaultAgent": "fullstack-developer",
      "multiAgentMode": true,
      "agentSwitching": {
        "enabled": true,
        "method": "automatic",
        "fallback": "manual"
      }
    },
    "triggers": {
      "enabled": true,
      "configFile": ".copilot/triggers.json",
      "priority": "file-pattern-over-keyword"
    },
    "workflows": {
      "enabled": true,
      "configFile": ".copilot/workflows.json",
      "parallelExecution": true,
      "maxConcurrentAgents": 3
    },
    "context": {
      "maxTokens": 128000,
      "includeFileTree": true,
      "includeGitStatus": true,
      "includeDependencies": true,
      "autoLoadRelatedFiles": true
    },
    "output": {
      "format": "markdown",
      "includeAgentName": true,
      "includeTimestamps": false,
      "colorize": true,
      "verbose": false
    },
    "performance": {
      "caching": true,
      "cacheTTL": 3600,
      "rateLimiting": {
        "enabled": true,
        "maxRequestsPerMinute": 60
      }
    }
  },
